---
import Icon, { type IconName } from '@components/Icon.astro'
import techsquidtv from '@data/techsquidtv.json'
import Avatar from '@images/brand/tstvprofile.png'
import LayoutBase from "@layouts/LayoutBase.astro";
import { Image } from "astro:assets";
---

<LayoutBase>
  <main class="wrapper">
    <div class="mt-20">
      <header class="flex flex-col justify-center items-center text-center my-4">
        <Image src={Avatar} alt="Kyle a.k.a TechSquidTV" class="rounded-full w-32 xl:w-48" transition:name={"tstv-avatar"} />
        <div class="my-2">
          <h1
            class="font-semibold text-3xl xl:text-4xl"
          >
            Kyle Tryon
          </h1>
        <h2
            class="text-lg xl:text-xl"
          >
            @techsquidtv
          </h2>
        </div>
        <div class="flex flex-col justify-center items-center text-xs">
          <a href={`mailto:${techsquidtv.email}`} class="flex flex-row space-x-2"><Icon name={"email"}/><span>{techsquidtv.email}</span></a>
          <a href="/verify" class="flex flex-row text-emerald-200 underline"><span>verify</span><Icon name={"verified"} size={3}/></a>
        </div>
      </header>
      <ul class="flex flex-col space-y-3">
        {
          techsquidtv.socials.map((social) => (
            <li class="card transition-scale duration-300 hover:scale-[102%]">
              <a class="flex flex-row space-x-3 items-center" href={social.url}>
                <Icon name={social.icon as IconName} />
                <span>{social.name}</span>
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </main>
</LayoutBase>

