<style>
  /* Services navigation secondary */
  #services-nav-secondary {
    opacity: 0;
    transition: opacity 0.5s ease;
  }

  #services-nav-secondary.visible {
    opacity: 1;
  }

  /* Fade on scroll animation */
  .visible {
    opacity: 1 !important;
  }
</style>

<script>
  // Fade on scroll functionality
  function setupFadeOnScroll() {
    const elements = document.querySelectorAll(
      'section[id="screencasts"], section[id="animations"], section[id="writing"], section[id="code"]',
    );

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add("visible");
          }
        });
      },
      {
        threshold: 0.1,
        rootMargin: "0px 0px -50px 0px",
      },
    );

    elements.forEach((el) => observer.observe(el));
  }

  // Services navigation toggle
  function setupServicesNavToggle() {
    const secondaryNav = document.getElementById("services-nav-secondary");
    if (!secondaryNav) return;

    let scrollTimeout: number;

    function showNav() {
      if (secondaryNav) secondaryNav.classList.add("visible");
    }

    function hideNav() {
      if (secondaryNav) secondaryNav.classList.remove("visible");
    }

    window.addEventListener("scroll", () => {
      const scrollY = window.scrollY;

      if (scrollY > 200) {
        showNav();
        clearTimeout(scrollTimeout);
        scrollTimeout = window.setTimeout(hideNav, 3000);
      } else {
        hideNav();
      }
    });

    // Show on hover
    secondaryNav.addEventListener("mouseenter", showNav);
    secondaryNav.addEventListener("mouseleave", () => {
      if (window.scrollY > 200) {
        scrollTimeout = window.setTimeout(hideNav, 1000);
      }
    });
  }

  // Initialize everything when DOM is loaded
  document.addEventListener("DOMContentLoaded", () => {
    setupFadeOnScroll();
    setupServicesNavToggle();
  });
</script>
