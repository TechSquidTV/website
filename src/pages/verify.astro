---
import { Icon } from "astro-icon/components";
import Button from "../components/Button.astro";
import PageHeader from "../components/PageHeader.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import { GPG_INFO } from "../consts";

const { fingerprint, publicKeyUrl } = GPG_INFO;
---

<BaseLayout
  title="Verify Identity - TechSquidTV"
  description="Verify the identity of Kyle Tryon using cryptographic verification"
  maxWidth="lg"
>
  <PageHeader title="Identity Verification">
    <Icon name="verified" size={32} class="text-accent mx-auto mb-6" />
    <div
      class="text-text-secondary mx-auto max-w-2xl space-y-4 text-lg leading-relaxed"
    >
      <p>
        I am Kyle Tryon, and I want to help you verify my identity. This page
        provides cryptographic verification methods to ensure that
        communications are actually from me. In an age of increasing digital
        impersonation, I believe identity verification is important.
      </p>
    </div>
  </PageHeader>

  <div class="mt-12 grid gap-8">
    <section
      class="bg-bg-tertiary border-border hover:border-accent hover:shadow-card rounded-2xl border p-8 transition-all duration-300 hover:-translate-y-1"
    >
      <h2
        class="text-text-primary mb-6 flex items-center gap-3 text-xl font-semibold"
      >
        <Icon name="fingerprint" size={24} class="text-accent" />
        GPG Public Key Fingerprint
      </h2>
      <div
        class="bg-bg-code border-border mb-6 rounded-lg border p-4 text-center"
      >
        <code
          class="text-accent font-mono text-sm tracking-wider break-all select-all md:text-base md:break-normal"
        >
          {fingerprint}
        </code>
      </div>
      <Button href={publicKeyUrl} variant="primary" fullWidth>
        <Icon name="key" size={20} />
        Download Public Key
      </Button>
    </section>
  </div>
</BaseLayout>
