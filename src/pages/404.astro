---
import { Image } from "astro:assets";
import BaseLayout from "../layouts/BaseLayout.astro";
import Button from "../components/Button.astro";
import TSTVLogo from "../images/assets/tstv-404.svg";
---

<BaseLayout
  title="404 - Page Not Found | TechSquidTV"
  description="The page you're looking for doesn't exist."
  maxWidth="md"
>
  <div class="error-container">
    <div class="error-illustration">
      <Image
        src={TSTVLogo}
        alt="TechSquidTV 404 Illustration"
        width={200}
        height={200}
        class="error-logo"
      />
    </div>
    <h1 class="error-code glitch-animation">404</h1>
    <h2 class="error-title">There's nothing to see here</h2>
    <p class="error-message">
      The page you're looking for seems to have vanished into the digital void.
      Maybe it's exploring the metaverse?
    </p>
    <Button href="/" variant="primary" size="lg"> Back to Home </Button>
  </div>
</BaseLayout>

<style>
  .error-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 50vh;
    text-align: center;
    padding: 2rem 0;
  }

  .error-illustration {
    margin-bottom: 2rem;
    opacity: 0.8;
  }

  .error-logo {
    filter: drop-shadow(0 0 20px rgb(var(--color-accent) / 0.3));
    transition: transform 0.3s ease;
  }

  .error-logo:hover {
    transform: scale(1.05);
  }

  .error-code {
    font-size: clamp(6rem, 15vw, 12rem);
    font-weight: 800;
    color: var(--color-accent);
    text-shadow: 0 0 30px rgb(var(--color-accent) / 0.4);
    margin: 0;
    line-height: 0.8;
  }

  .error-title {
    font-size: clamp(2rem, 5vw, 3rem);
    color: var(--color-text-primary);
    font-weight: 600;
    margin: 1rem 0;
  }

  .error-message {
    font-size: 1.2rem;
    color: var(--color-text-muted);
    margin-bottom: 2rem;
    max-width: 500px;
    line-height: 1.6;
  }

  .glitch-animation {
    animation: glitch 2s linear infinite;
  }

  @keyframes glitch {
    0%,
    98% {
      transform: translate(0);
    }
    1% {
      transform: translate(2px, -2px);
    }
    2% {
      transform: translate(-2px, 2px);
    }
    3% {
      transform: translate(0);
    }
    4% {
      transform: translate(1px, -1px);
    }
    5% {
      transform: translate(-1px, 1px);
    }
  }
</style>
