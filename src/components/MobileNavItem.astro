---
import { Icon } from "astro-icon/components";

interface Props {
  href: string;
  label: string;
  icon: string;
  className?: string;
}

const { href, label, icon, className = "" } = Astro.props;
---

<a
  href={href}
  class={`flex items-center gap-3 rounded-lg p-3 font-medium text-text-secondary no-underline transition-all duration-200 hover:bg-bg-tertiary hover:text-accent hover:translate-x-1 ${className}`}
>
  <Icon name={icon} size={18} />
  {label}
</a>
