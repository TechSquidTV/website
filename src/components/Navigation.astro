---
import { Astronav, MenuItems, MenuIcon } from "astro-navbar"
import Icon from '@components/Icon.astro'

type MenuItem = {
  name: string,
  href: string,
}
const menuItems: MenuItem[] = [
  {
    name: "blog",
    href: "/blog",
  },
  {
    name: "projects",
    href: "/projects",
  },
  {
    name: "follow",
    href: "/follow",
  },
  {
    name: "about",
    href: "/about",
  },
  {
    name: "contact",
    href: "/contact",
  },
]

---

<Astronav>
  <div class="flex fixed top-4 left-0 right-0 z-50 justify-center text-lg ">
    <div class="flex flex-col md:flex-row items-center text-center px-4 py-2 text-smoke-100 border border-smoke-900 border-opacity-30 bg-smoke-800 bg-opacity-30 backdrop-blur-md rounded-md md:rounded-full shadow-lg">
      <div class="flex space-x-2 items-center py-2 py:mb-0">
        <a href="/" class="flex items-center justify-center">
            <Icon size={6} name="techsquidtv" />
          </a>
        <MenuIcon class="w-4 h-4 md:hidden" />
      </div>
      <MenuItems class="hidden md:flex space-x-2">
        <ul class="flex flex-col md:flex-row">
          {
            menuItems.map((item) => {
              return (
                <li>
                  <a href={item.href} class="transition-color duration-500 hover:bg-smoke-200 hover:bg-opacity-50 hover:text-white px-3 py-2 rounded-full">{item.name}</a>
                </li>
              )
            })
          }
        </ul>
      </MenuItems>
    </div>
  </div>
</Astronav>
