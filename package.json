{
  "name": "techsquidtv.com",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "pnpm run build-setup && astro build && pnpm run kill-assets",
    "preview": "astro preview",
    "astro": "astro",
    "lint:ci": "eslint --ext .astro,.js,.jsx,.ts,.tsx .",
    "lint": "eslint --ext .astro,.js,.jsx,.ts,.tsx . --fix",
    "format:ci": "prettier --check .",
    "format": "prettier --write .",
    "test": "vitest run",
    "build-setup": "pnpm run serve-assets & pnpm run wait-for-assets",
    "serve-assets": "serve -p 3001 --no-port-switching ./src/images",
    "wait-for-assets": "wait-on -t 5000 http://localhost:3001/opengraph/tstv-og-bg.png",
    "kill-assets": "kill-port 3001 || true"
  },
  "dependencies": {
    "@astrojs/check": "^0.3.4",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "astro-icon": "^1.1.1",
    "gray-matter": "^4.0.3"
  },
  "devDependencies": {
    "@astrojs/mdx": "^4.3.3",
    "@astrojs/netlify": "^6.5.6",
    "@astrojs/react": "^4.3.0",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.4.2",
    "@eslint/js": "^9.33.0",
    "@expressive-code/plugin-collapsible-sections": "^0.41.3",
    "@fontsource-variable/inter": "^5.2.6",
    "@fontsource-variable/outfit": "^5.2.6",
    "@iconify-json/fluent": "^1.2.28",
    "@jasikpark/astro-svg-loader": "^0.2.0",
    "@sentry/astro": "^10.5.0",
    "@spotlightjs/astro": "^3.2.6",
    "@tailwindcss/cli": "^4.1.11",
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/vite": "^4.1.11",
    "@typescript-eslint/parser": "^6.21.0",
    "astro": "^5.12.9",
    "astro-embed": "^0.9.0",
    "astro-eslint-parser": "^1.2.2",
    "astro-expressive-code": "^0.41.3",
    "autoprefixer": "^10.4.21",
    "date-fns": "^4.1.0",
    "eslint": "^9.33.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "fast-xml-parser": "^5.2.5",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "satori": "^0.16.2",
    "serve": "^14.2.3",
    "sharp": "^0.34.3",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "wait-on": "^8.0.4"
  }
}
